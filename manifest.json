{
  "manifest_version": 2,
  "name": "OnClick Translator",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "Translate",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab", "tabs"],
  // "background": { "scripts": [ "background.js" ] }
}
